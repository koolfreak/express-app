doctype html
html
  head
    <meta charset='utf-8'/>
    <link rel="apple-touch-icon" sizes="76x76" href="/images/icon-128x123.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/images/icon-128x123.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    title= 'Login'
    link(rel='stylesheet', href='/css/custom_style.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/animate.min.css')
    link(rel='stylesheet', href='/css/themify-icons.css')
    link(rel='stylesheet', href='/css/paper-dashboard.css')
    link(rel='stylesheet', href='/css/login.css')
    link(href='http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Muli:400,300', rel='stylesheet', type='text/css')
    block page_css
    script(src='/js/jquery-1.10.2.js')
  body
    <div class="wrapper wrapper-full-page">
        <div class="full-page login-page">
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                            <form class="card" method="post" action="/login">
                                <div class="card" data-background="color" data-color="blue">
                                    <div class="card-header" style="text-align:center;">
                                        <img src="/images/gh-logo-header-371x128.png" width="185" height="64" alt="Glorious Hope">
                                    </div>
                                    <div class="card-header">
                                        <h3 class="card-title">Login</h3>
                                    </div>
                                    if message
                                        p #{message}
                                    <div class="card-content">
                                        <div class="form-group">
                                            <label>Username</label>
                                            <input type="text" name="username" placeholder="Username" class="form-control input-no-border" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Password</label>
                                            <input type="password" name="password" placeholder="Password" class="form-control input-no-border" required>
                                        </div>
                                    </div>
                                    <div class="card-footer text-center">
                                        <button type="submit" class="btn btn-fill btn-wd ">Submit</button>
                                        <div class="forgot">
                                            <a href="#pablo">Forgot your password?</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    script(src='/js/bootstrap.min.js')
    script(src='/js/paper-dashboard.js')